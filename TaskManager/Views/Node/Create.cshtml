@model TaskManager.Models.Dev.CreateNodeModel
@{
    ViewBag.Title = "创建节点";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>创建节点</h2>

<div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            @ViewBag.Error
        </div>
    }

    @using (Html.BeginForm("Create", "Node", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.IP)
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.IP, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IP)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Port)
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Port, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Port)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Remark)
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Remark, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <button class="btn btn-primary" type="submit">创建</button>
            </div>
        </div>
    }
</div>
