@model TaskManager.Models.Dev.CreateNodeModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Node</h2>

<div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            @ViewBag.Error
        </div>
    }

    @using (Html.BeginForm("Create", "Node"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.IP)
            @Html.TextBoxFor(m => m.IP)
            @Html.ValidationMessageFor(m => m.IP)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Port)
            @Html.TextBoxFor(m => m.Port)
            @Html.ValidationMessageFor(m => m.Port)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.Remark)
            @Html.TextBoxFor(m => m.Remark)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        
        <button class="btn btn-primary" type="submit">Create</button>
    }
</div>
