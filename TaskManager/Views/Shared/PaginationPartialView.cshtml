@using TaskManager.Helper.CustomHtmlHelper
@model TaskManager.Models.Shared.PaginationViewModel
<div class="row">
    <div class="col-sm-10">
        <ul class="pagination">
            @Html.PageLinks(@Model.PagedList, x => Model.GenerateUrlFunc(x))
        </ul>
    </div>
    <div class="col-sm-2 text-right" style="margin: 20px 0;">
        <label class="pagination_num">@string.Format("共{0}页，共{1}条", Model.PagedList.TotalPageCount, Model.PagedList.TotalItemCount)</label>
    </div>
</div>
