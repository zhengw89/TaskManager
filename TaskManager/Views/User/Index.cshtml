@using TaskManager.Helper.CustomHtmlHelper
@using TaskManager.LogicEntity;
@using TaskManager.LogicEntity.Entities;
@using TaskManager.LogicEntity.Entities.Org;
@model TmProcessResult<PagedList<User>>
@{
    ViewBag.Title = "用户列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>用户列表</h2>

@if (Model.HasError)
{
    <h3>Error:@Model.Error.Message</h3>
}
else
{
    <div class="row">
        <div class="col-md-2">
            @Html.RouteLink("创建用户", "CreateUser", new { }, new { @class = "btn btn-default" })
        </div>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
            <th>用户ID</th>
            <th>用户名称</th>
            <th>添加时间</th>
            <th>操作</th>
        </thead>
        <tbody>
            @foreach (var user in @Model.Data)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.CreateTime</td>
                    <td>@Html.RouteLink("编辑", "EditUser", new { userId = user.Id }, new { })</td>
                </tr>
            }
        </tbody>
    </table>
    <ul class="pagination">
        @Html.PageLinks(@Model.Data, x => Url.Action("Index", new { pageIndex = x }))
    </ul>
}